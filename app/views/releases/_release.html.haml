%tr{ :class => "#{classes_for_release_row(release, current_user)} #{cycle('even', 'odd')}" }
  = release_field(:class => 'edit_band', :content => release.band, :is_admin => admin?(current_user))
  = release_field(:class => 'edit_name', :content => release.name, :is_admin => admin?(current_user))
  = release_field(:class => 'edit_us_date', :content => release.formatted_date(:us_date), :is_admin => admin?(current_user))
  = release_field(:class => 'edit_euro_date', :content => release.formatted_date(:euro_date), :is_admin => admin?(current_user))
  = release_field(:class => 'edit_format', :content => release.format, :is_admin => admin?(current_user), :length => 15)
  =# release_field(:class => 'edit_label', :content => release.label, :is_admin => admin?(current_user), :length => 18)
  %td.edit_url= link_to_more release
  - if admin?(current_user)
    %td
      = link_to 'Edit', edit_admin_release_path(release)
      = link_to 'Delete', admin_release_path(release), :confirm => 'Are you sure?', :method => 'delete'
