%tr{ :class => "#{classes_for_release_row(admin?, release)} #{cycle('even', 'odd')}" }
  = release_field(:class => 'edit_band', :content => release.band, :is_admin => admin?)
  = release_field(:class => 'edit_name', :content => release.name, :is_admin => admin?)
  = release_field(:class => 'edit_us_date', :content => release.formatted_us_date, :is_admin => admin?)
  = release_field(:class => 'edit_euro_date', :content => release.formatted_euro_date, :is_admin => admin?)
  = release_field(:class => 'edit_format', :content => release.format, :is_admin => admin?, :length => 15)
  = release_field(:class => 'edit_label', :content => release.label, :is_admin => admin?, :length => 18)
  %td.edit_url= link_to_more release
  - if admin?
    %td
      = link_to 'Edit', edit_releases_path(release)
      = link_to 'Delete', releases_path(release), :confirm => 'Are you sure?', :method => 'delete'
