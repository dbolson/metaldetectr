#search
  = form_tag(releases_path, :method => :get, :id => 'search_form') do
    = label_tag 'Start Date'
    = text_field_tag 'start_date', params[:start_date], :id => 'start_date'
    = label_tag 'End Date'
    = text_field_tag 'end_date', params[:end_date], :id => 'end_date'
    = submit_tag 'Search'
  - if params[:start_date].present? || params[:end_date].present?
    #clear_search= link_to 'Clear search', releases_path
