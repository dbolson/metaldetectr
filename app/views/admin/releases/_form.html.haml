= form_for([ :admin, @release ]) do |f|
  - @release.errors.full_messages.each do |msg|
    = msg

  %fieldset
    %ul
      %li
        = f.label :band
        = f.text_field :band
      %li
        = f.label :name, 'Album name'
        = f.text_field :name
      %li
        = f.label :us_date, 'US date'
        = f.text_field :us_date
      %li
        = f.label :euro_date, 'Euro date'
        = f.text_field :euro_date
      %li
        = f.label :format, 'Format'
        = f.text_field :format
      %li
        = f.label :label
        = f.text_field :label
      %li
        = f.label :country
        = f.text_field :country
      %li
        = f.label :url
        = f.text_field :url
      %li
        = f.submit
      %li
        = link_to 'Back', releases_path
